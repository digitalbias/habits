<h2>Log In</h2>

<%= form_for @conn, session_path(@conn, :create), [name: :session], fn f -> %>
    <label for="login-email">Email</label>
    <%= email_input f, :email, class: "TextInput", id: "login-email" %>

    <label for="login-password">Password</label>
    <%= password_input f, :password, class: "TextInput", id: "login-password" %>

    <%= submit "Log In", class: "Button" %>
<% end %>
